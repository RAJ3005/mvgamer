<div class="cover-image" style="background-image: linear-gradient(rgba(0,0,0,0), rgba(0,0,0,0)),url(<%= asset_path("cover-background.jpg") %>)">
  <div class="profile_container">
    <div class="avatar_container">
      <img src="row1.6.png" alt="users image" class="avatar_container_image">
    </div>
    <div class="profile_details">
      <span class="profile_details_gamertag"></span>
    </div>
  </div>
</div>
<div class="container py-5">
  <%# <%= area_chart Challenge.group_by_day(:created_at).count %>
  <%# <%= area_chart Bet.group_by_day(:created_at).count do when you get home%>
  <div class="row">
    <% @challenges.each do |challenge| %>
      <div class="co-12 col-sm-6 col-md-4 something">
        <%= link_to challenge_path(challenge), class: "text-decoration-none" do %>
        <div class="wrapper">
          <% if challenge.photo.attached? %>
            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),url(<%= cl_image_path challenge.photo.key %>)">
          <% else %>
            <div class="card" data-aos="zoom-in" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),url(<%= asset_path("cover-background.jpg") %>)">
          <% end %>
          <h1><%= challenge.title %></h1>
            <div class="info">
            <h2><%= challenge.description %></h2>
            </div>
          </div>
          <% end %>
          </div>
      </div>
    <% end %>
  </div>
</div>

