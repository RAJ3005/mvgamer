<div class="cover-image" style="background-image: linear-gradient(rgba(0,0,0,0), rgba(0,0,0,0)),url(<%= asset_path("cover-background.jpg") %>)">
  <div class="profile_container">
    <div class="avatar_container">
      <img src="<%= asset_path("luffy_avatar.png") %>" alt="" class="avatar_container_image">
    </div>
    <div class="profile_details">
      <span class="profile_details_gamertag">Rodney Johnson</span>
    </div>
  </div>
</div>
<div class="container py-5">
  <div class="container-fluid">
    <div class="d-flex">
      <h2 class="mb-5 text-white">Gaming Statistics</h2>
      <h4 class="mb-5 text-white ml-3">last 7 days</h4>
    </div>
    <div class="header-body">
      <div class="row d-flex">
        <div class="col-xl-3 col-lg-6">
          <div class="card card-stats mb-4 mb-xl-0">
            <div class="card-body">
              <div class="row">
                <div class="col">
                  <h5 class="card-title text-uppercase text-muted mb-0">Total kills</h5>
                  <span class="h2 font-weight-bold mb-0">57</span>
                </div>
                <div class="col-auto">
                  <div class="icon icon-shape bg-danger text-white rounded-circle shadow">
                    <i class="fas fa-chart-bar"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="col-xl-3 col-lg-6">
          <div class="card card-stats mb-4 mb-xl-0">
            <div class="card-body">
              <div class="row">
                <div class="col">
                  <h5 class="card-title text-uppercase text-muted mb-0">Kill-Death Ratio</h5>
                  <span class="h2 font-weight-bold mb-0">1.12</span>
                </div>
                <div class="col-auto">
                  <div class="icon icon-shape bg-danger text-white rounded-circle shadow">
                    <i class="fas fa-chart-bar"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-xl-3 col-lg-6">
          <div class="card card-stats mb-4 mb-xl-0">
            <div class="card-body">
              <div class="row">
                <div class="col">
                  <h5 class="card-title text-uppercase text-muted mb-0">Kill-Death Ratio</h5>
                  <span class="h2 font-weight-bold mb-0">1.12</span>
                </div>
                <div class="col-auto">
                  <div class="icon icon-shape bg-danger text-white rounded-circle shadow">
                    <i class="fas fa-chart-bar"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
  <%# <%= @time_played %>
